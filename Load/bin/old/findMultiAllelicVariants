#!/usr/bin/env python
from __future__ import with_statement
from __future__ import print_function

import sys
import gzip
from collections import Counter

fileName = sys.argv[1]

positions = {}

with gzip.open(fileName) as f:
    f.next()
    for line in f:
        line = line.rstrip()
        values = line.split('\t')
        variant = values[3]
        values = variant.split(':')
        pos = str(values[0]) + ":" + str(values[1])
        
        if pos in positions: # position is same but variant id is not
            if positions[pos] != variant:
                print(pos)
                sys.exit()
        else:
            positions[pos] = variant
