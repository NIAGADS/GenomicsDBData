#!/bin/bash

set -e # exit on error

FILE_PATH=/mnt/data/GenomicsDB/niagads_resources/NG00052
ACCESSION=NG00052

RS_MAP=dbSNP149_to_147_mapping.txt

FILES=csf_clusterin_summary_p05_withA2.txt

PAN_SOURCE_IDS=""
PAN_NAMES="CSF: CLU" 
PAN_DESCRIPTIONS="Summary statistics for the association between cerebrospinal fluid (CSF) clusterin (CLU) levels and Alzheimer's Disease"
N_DATASETS=1
EXT_DBS_RLS="NIAGADS Datasets|current"

LOAD_DATA=false
GENERATE_LOAD_FILES=false
LOAD_STUDY=false
PATCH=false
COMMIT="--veryVerbose"
PREPROCESS=""
DATASET=all


while [[ $# -gt 0 ]]
do

    key="$1"

    case $key in
	--loadStudy)
	    LOAD_STUDY=true
	    PROTOCOL_APP_NODE_ID="$2"
	    shift
	    ;;
	--loadData)
	    LOAD_DATA=true
	    DATASET="$2"
	    shift
	    echo "Dataset: ${DATASET}"
	    ;;
	--runPatches)
	    PATCH=true
	    ;;
	--preprocess)
	    PREPROCESS="--preprocess"
	    ;;
	--generateLoadFiles)
	    GENERATE_LOAD_FILES=true
	    DATASET="$2"
	    shift
	    echo "Dataset: ${DATASET}"
	    ;;
	--commit)
	    COMMIT="--commit"
	    ;;
	*)
            # unknown option
	    ;;
    esac
    shift # past argument or value
done

# run loading plugin
if [ ${GENERATE_LOAD_FILES} = true ] ; then 
    for i in "${!FILES[@]}" ; 
    do
	if [[ ${DATASET} = all || ${DATASET} = ${PAN_SOURCE_IDS[$i]} ]] ; then
	    echo "Generating Load File from ${FILES[$i]}"
	    generateGwasLoadFileFromTabDelim --dir ${FILE_PATH} --file ${FILES[$i]} --sourceId ${ACCESSION}${PAN_SOURCE_IDS[$i]} --pvalue P --chr CHR --position BP --allele1 A2 --allele2 A1 --testAllele A1 --chrMap '{"25":"X"}'
	fi
    done
fi


if [ ${LOAD_DATA} = true ] ; then 
   
    for i in "${!PAN_SOURCE_IDS[@]}" ; 
    do

	if [[ ${DATASET} = all || ${DATASET} = ${PAN_SOURCE_IDS[$i]} ]] ; then
	    echo "Loading ${ACCESSION}${PAN_SOURCE_IDS[$i]}"
	    COMMENT="ga GenomicsDBData::Load::Plugin::LoadSeqVariationResult --file ${FILE_PATH}/gwas_summary_statistics_${ACCESSION}${PAN_SOURCE_IDS[$i]}.csv --extDbRlsSpec "${EXT_DBS_RLS}" --name "${PAN_NAMES[$i]}" --description "${PAN_DESCRIPTIONS[$i]}" --sourceId ${ACCESSION}${PAN_SOURCE_IDS[$i]} --variantSource NIAGADS --subtypeSourceRef STATO_0000091 --checkAltVariantIds --matchPosition --ignoreMergedSnps --studySourceId ${ACCESSION}"
	    ga GenomicsDBData::Load::Plugin::LoadSeqVariationResult --file ${FILE_PATH}/gwas_summary_statistics_${ACCESSION}${PAN_SOURCE_IDS[$i]}.csv --extDbRlsSpec "${EXT_DBS_RLS}" --name "${PAN_NAMES[$i]}" --description "${PAN_DESCRIPTIONS[$i]}" --sourceId ${ACCESSION}${PAN_SOURCE_IDS[$i]} --variantSource NIAGADS --subtypeSourceRef STATO_0000091 --checkAltVariantIds   --studySourceId ${ACCESSION} --ignoreMergedSnps  --matchPosition --comment "${COMMENT}"  ${COMMIT} > load_seqvariationresult_${ACCESSION}${PAN_SOURCE_IDS[$i]}.log 2>&1 
	fi
    done
fi


# patches
if [ ${PATCH} = true ] ; then
    echo "no patches "
    # runSqlPatch --file ?
fi
